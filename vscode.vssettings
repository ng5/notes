        <UserShortcuts>

          <!-- ===== VS CODE COMMAND PALETTE EQUIV ===== -->
          <Shortcut Command="View.QuickLaunch" Scope="Global">Ctrl+Shift+P</Shortcut>

          <!-- ===== QUICK OPEN / NAV ===== -->
          <Shortcut Command="Edit.GoToFile" Scope="Global">Ctrl+P</Shortcut>
          <Shortcut Command="Edit.GoToDefinition" Scope="Global">F12</Shortcut>
          <Shortcut Command="Edit.PeekDefinition" Scope="Global">Alt+F12</Shortcut>
          <Shortcut Command="View.NavigateBackward" Scope="Global">Alt+Left Arrow</Shortcut>
          <Shortcut Command="View.NavigateForward" Scope="Global">Alt+Right Arrow</Shortcut>
          <Shortcut Command="Refactor.Rename" Scope="Global">F2</Shortcut>

          <!-- ===== SEARCH ===== -->
          <Shortcut Command="Edit.Find" Scope="Global">Ctrl+F</Shortcut>
          <Shortcut Command="Edit.FindinFiles" Scope="Global">Ctrl+Shift+F</Shortcut>
          <Shortcut Command="Edit.Replace" Scope="Global">Ctrl+H</Shortcut>
          <Shortcut Command="Edit.ReplaceinFiles" Scope="Global">Ctrl+Shift+H</Shortcut>

          <!-- ===== SIDEBAR / PANELS ===== -->
          <!-- VS Code: Ctrl+B toggle sidebar (VS shows/focuses; works best with Auto Hide) -->
          <Shortcut Command="View.SolutionExplorer" Scope="Global">Ctrl+B</Shortcut>

          <!-- VS Code: Ctrl+0 focus sidebar -->
          <Shortcut Command="View.SolutionExplorer" Scope="Global">Ctrl+0</Shortcut>

          <!-- VS Code: Ctrl+1 focus editor -->
          <Shortcut Command="Window.ActivateDocumentWindow" Scope="Global">Ctrl+1</Shortcut>

