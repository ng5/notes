          <Shortcut Command="View.ErrorList" Scope="Global">Ctrl+Shift+M</Shortcut>

          <!-- Output panel (handy) -->
          <Shortcut Command="View.Output" Scope="Global">Ctrl+Alt+O</Shortcut>

          <!-- Terminal -->
          <Shortcut Command="View.Terminal" Scope="Global">Ctrl+`</Shortcut>

          <!-- ===== EDITOR GROUPS / SPLITS (TAB GROUPS) ===== -->
          <!-- VS Code: Ctrl+\ split editor -->
          <Shortcut Command="Window.SplitWindowVertically" Scope="Global">Ctrl+\</Shortcut>
          <Shortcut Command="Window.SplitWindowHorizontally" Scope="Global">Ctrl+Shift+\</Shortcut>

          <!-- VS Code: Ctrl+2 / Ctrl+3 focus 2nd/3rd group (best VS equivalent: cycle tab groups) -->
          <Shortcut Command="Window.NextTabGroup" Scope="Global">Ctrl+2</Shortcut>
          <Shortcut Command="Window.PreviousTabGroup" Scope="Global">Ctrl+3</Shortcut>

