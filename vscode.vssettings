          <Shortcut Command="Edit.InsertNextMatchingCaret" Scope="Global">Ctrl+D</Shortcut>
          <Shortcut Command="Edit.InsertCaretsatAllMatching" Scope="Global">Ctrl+Shift+L</Shortcut>

