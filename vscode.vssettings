          <Shortcut Command="Edit.MoveSelectedLinesDown" Scope="Global">Alt+Down Arrow</Shortcut>
          <Shortcut Command="Edit.Duplicate" Scope="Global">Shift+Alt+Down Arrow</Shortcut>
          <Shortcut Command="Edit.LineDelete" Scope="Global">Ctrl+Shift+K</Shortcut>

