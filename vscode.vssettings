          <Shortcut Command="Window.CloseAllDocuments" Scope="Global">Ctrl+K, Ctrl+W</Shortcut>

          <!-- VS Code: Reopen closed editor -->
          <Shortcut Command="Window.UndoCloseDocument" Scope="Global">Ctrl+Shift+T</Shortcut>

